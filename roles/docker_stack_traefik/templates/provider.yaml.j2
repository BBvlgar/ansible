---

http:

  middlewares:

    forcehttps:
      redirectScheme:
        permanent: true
        scheme: 'https'

    traefikauth:
      basicAuth:
        users:
          {#
           # adjust at least your password â€“ for example by this docker command ('\'' needed for single quote escape ...):
           # $$$   docker run -it --rm ubuntu bash -c 'apt-get update > /dev/null; apt-get install -y apache2-utils > /dev/null; echo; htpasswd -nbB '\''admin'\'' '\''Def12345'\'''
           #
           #}{% for user, passhash in traefik_users.items() %}- '{{ user }}:{{ passhash }}'
          {% endfor %}

    security:
      headers:
        frameDeny: true
        sslRedirect: true
        browserXssFilter: true
        contentTypeNosniff: true
        #HSTS
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000

tls:

  options:

    default:
      minVersion: VersionTLS12
      cipherSuites:
        - TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384   # TLS 1.2
        - TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305    # TLS 1.2
        - TLS_AES_256_GCM_SHA384                  # TLS 1.3
        - TLS_CHACHA20_POLY1305_SHA256            # TLS 1.3
      curvePreferences:
        - CurveP521
        - CurveP384
      sniStrict: true

...
